@model List<Product>

@if (TempData["Success"] != null)
{
	<h2>@TempData["Success"]</h2>
}

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Product List
			</h2>
		</div>
		<div class="col-6 text-end text">
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
				Create New Product
			</a>
		</div>


		<table>
			<thead>
				<tr>
					<th>Title</th>
					<th>ISBN</th>
					<th>Price</th>
					<th>Author</th>
					<th>Category</th>
				</tr>
			</thead>



			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td>@obj.Title</td>
						<td>@obj.ISBN</td>
						<td>@obj.Price</td>
						<td>@obj.Author</td>
						<td>@obj.Category.Name</td>

						<td>
							<div class="w-75 btnbtn-group" role="group">
								<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									Edit
								</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>

		</table>
	</div>

</div>