@model Product

<form method="post">
	<div class="container mt-3">
		<div class="row">
			<div class="col-md-12 text-center">
				<h3>@Model.Title</h3>
				<h5>@Model.Author</h5>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<a asp-action="Index" class="btn btn-outline-info">Go Back</a>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col-md-4 mx-5">
				<img src="@Model.ImgUrl" alt="Book Cover" class="img-fluid w-50">
			</div>
			<div class="col-md-6">
				<p class="bg-info px-2 rounded" style="width:min-content"><strong>@Model.Category.Name</strong></p>
				<p class="text-muted"><strong>ISBN:</strong> @Model.ISBN</p>
				<p class="text-muted"><strong>List Price:</strong> <del>@Model.ListPrice.ToString("c")</del></p>
				<!--"c" represent currency-->
				<table class="table table-borderless">
					<tr>
						<td class="text-muted">Quantity</td>
						<td class="text-muted">1-50</td>
						<td class="text-muted">51-100</td>
						<td class="text-muted">100+</td>
					</tr>
					<tr>
						<td class="text-warning">Price</td>
						<td class ="text-warning">@Model.Price</td>
						<td class="text-warning">@Model.Price50</td>
						<td class="text-warning">@Model.Price100</td>
					</tr>
				</table>
				<p>@Model.Description</p>
				<button class="btn btn-primary">Add to Cart</button>
			</div>
		</div>
	</div>
</form>