@model Category

<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3 row p-0">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">

            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control" type="submit">Delete</button>
            </div>

            <div class="col-6 col-md-3">
                <a class="btn btn-secondary form-control border" asp-controller="Category" asp-action="Index">Back to List</a>
            </div>

        </div>

    </div>
</form>